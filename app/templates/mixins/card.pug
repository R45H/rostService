//-
	link - Ссылка на страницу товара
	img - Путь к картинке
	discount - Скидка
	logo - Ссылка на логотип компании-производителя вверху справа
	logo_group - Группа логотипов под основным фото
	title - Заголовок
	subtitle - Подзаголовок
	vendor - Артикул
	price - Стоимость без валюты

mixin card(data)
	.card(attributes.class ? class= attributes.class)
		.card__img-wrap
			a.card__img(
				style="background-image: url(" + data.img + ");"
				href= data.link ? data.link : "#"
				class= data.logo_group ? "card__img_lower" : ""
			)

			if data.discount
				.card__discount
					span.card__discount-text Скидка
					span.card__discount-value= data.discount

			if data.logo
				img.card__logo(src= data.logo)

			if data.logo_group
				.card__logo-group
					.card__logo-group-i
						each val in data.logo_group
							.card__logo-group-item
								.card__logo-group-item-i(style="background-image: url(" + val + ");")

		.card__text-wrap
			a.card__title(href= data.link ? data.link : "#")= data.title

			if data.subtitle
				p.card__subtitle= data.subtitle

			if data.vendor
				p.card__vendor= data.vendor

			.card__i

				if data.price
					.card__price-wrap
						span.card__price= data.price
						= ' '
						span.card__currency
							i.fa.fa-rub

				a.btn.card__btn(href= data.link ? data.link : "#") Подробнее