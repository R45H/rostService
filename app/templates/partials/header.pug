// HEADER
include ../mixins/menu

header.header
	.container
		.row.justify-content-between
			.col-4.col-md-3.col-lg-2
				a.logo(href="/")
					img.logo__img(src="img/logo.svg")
			.col-xl-4.col-lg-3.hidden-md-down
				form.search(action="search" name="search-form")
					input.search__input(type="text" placeholder="Найти среди 123 025 запчастей")
					button.search__btn(type="submit")
						i.fa.fa-search(aria-hidden="true")
					.search__descr.hidden-lg-down Поиск среди
						span.red  1 000 000 Автозапчастей
						|	для комерческого траспорта

			.col-xl-2.col-auto.hidden-sm-down
				.telephone.header__tel Бесплатно по России
					.telephone__number 8 (800) 700-48-37

			.col-xl-2.col-auto
				.top-cart.header__cart
					img.top-cart__icon(src="img/cart.png")
					.top-cart__count 2
					span.top-cart__price 13 644.00 р
					span.top-cart__arrow
						i.fa.fa-angle-down(aria-hidden="true")

			.col-xl-2.col-auto.hidden-md-down
				a.btn.btn_fill(href="") Вход / Регистрация
			.btn.btn_fill.menu-toggle
				span.menu-toggle__bar
.top-menu
	.container
		+menu(menu)